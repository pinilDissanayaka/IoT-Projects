void testdrawstyles(String str) {
  display.clearDisplay();

  display.setTextSize(2);             // Normal 1:1 pixel scale
  display.setTextColor(SSD1306_WHITE);        // Draw white text
  display.setCursor(0,0);             // Start at top-left corner
//  display.println(F("GSheet C2:"));
//  display.setCursor(0,1);             // Start at top-left corner
  display.println(str.c_str());
  display.display();
  delay(2000);
}

void setup() {
    Serial.begin(9600);

        // SSD1306_SWITCHCAPVCC = generate display voltage from 3.3V internally
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { // Address 0x3D for 128x64
    Serial.println(F("SSD1306 allocation failed"));
    for(;;); // Don't proceed, loop forever
  }
  display.clearDisplay();
  display.drawBitmap(0, 0, image_data_Image, 128, 64, 1);
  display.display();
  delay(2000); // Pause for 2 seconds
  display.clearDisplay();


    WiFi.begin(WIFI_SSID, WIFI_PASS);
    while(WiFi.status() != WL_CONNECTED){
        Serial.print("."); 
        delay(500);
    }
    Serial.println("Connected to WiFi!");
    mqttClient.setId(MQTT_CLID);
    mqttClient.setUsernamePassword(MQTT_USER, MQTT_PASS);
    if (!mqttClient.connect(MQTT_BROKER, MQTT_PORT)){
        Serial.println(mqttClient.connectError());
    }
    Serial.println("Connected to MQTT Cloud!");
    mqttClient.subscribe(MQTT_TOPIC);
    testdrawstyles("STechiezDIY");
}


void loop() {
  int messageSize = mqttClient.parseMessage();
  msd_index = 0;
  memset(rcvd_msg,'\0',32);
  if (messageSize) {
    // we received a message, print out the topic and contents
    Serial.print("Received a message with topic '");
    Serial.print(mqttClient.messageTopic());
    Serial.print("', length ");
    Serial.print(messageSize);
    Serial.println(" bytes:");

    // use the Stream interface to print the contents
    while (mqttClient.available()) {
      rcvd_msg[msd_index++] = (char)mqttClient.read();
    }
    rcvd_msg[msd_index++] = '\0';
    String message(rcvd_msg);
    Serial.println(message);
    testdrawstyles(message);
  }
}
